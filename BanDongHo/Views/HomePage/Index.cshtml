        .homepage-card {
            position: relative;
            overflow: hidden;
        }

            .homepage-card::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 80%;
                height: 99%;
                background: rgba(0, 0, 0, 0.5); /* Màu nền làm mờ */
                opacity: 0;
                transition: opacity 0.3s;
                border-radius: 10px;
            }

            .homepage-card:hover::after {
                opacity: 0.4;
            }

            .homepage-card p {
                position: absolute;
                top: 38%;
                left: 35%;
                transform: translate(-50%, -50%);
                color: wheat;
                font-weight: bold;
                font-size: 50px;
                opacity: 0;
                transition: opacity 0.3s;
            }

            .homepage-card:hover p {
                opacity: 1;
